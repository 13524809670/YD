.mainbody 
	width 1200px
	margin 20px auto 35px
	overflow hidden
.mainbody .title 
	width 993px
	float right
	height 70px
	line-height 40px
	border-bottom 1px solid #222
.mainbody .title span 
	width 5px 
	height 42px
	background #3aa3f3
	display block
	margin-right 5px
.mainbody .title h2 
	font-size 28px
	color #222	
.mainbody .title h2,
.mainbody .title span 
	float left
.mainbody .title p 
	float right
	font-size 16px
	font-weight 600
	margin-top 15px
	
.mainbody .fl_wrap	
	width 208px
	height 247px
	background url(../images/abous_border_03.png) no-repeat 0 0
	float left
	text-align center
.mainbody .fl_wrap li 
	width 200px
	height 45px
	line-height 45px 
.mainbody .fl_wrap li a 
	font-size 14px 
	color #222
	margin-left 40px
.mainbody .fl_wrap li a.cur 
	font-size 16px
	font-weight 600
.mainbody .fl_wrap li a.last 
	color #3aa3f3
.mainbody .fl_wrap li img 
	display inline-block
	margin-left -20px
.mainbody .fl_wrap li .bottom_icon 
	width 200px
	display block 
	height 3px 
	background url(../images/abous_us_13.png) no-repeat
	background-position 8px 0
.mainbody .fl_wrap li a:hover 
	color #3aa3f3
	
.mainbody .con_wrap 
	width 963px
	float right
	margin-top 15px
	padding-bottom 10px
.mainbody .con_wrap h3 
	text-align center
	font-size 22px 
.mainbody .con_wrap .text li 
	overflow hidden
	height 187px
	margin-top 30px
.mainbody .con_wrap .text li > a 
	display block
	width 312px 
	height 187px
	float left
.mainbody .con_wrap .text li .txt 
	width 623px
	float right
.mainbody .con_wrap .text li .txt h4
	font-size 18px
	color #444	
	font-weight 500
	margin-top 25px
.mainbody .con_wrap .text li .txt h4 span 
	float right
.mainbody .con_wrap .text li .txt h4:hover a
.mainbody .con_wrap .text li .txt h4:hover span 
	color blue
.mainbody .con_wrap .text li .txt span,
.mainbody .con_wrap .text li .txt p 
	font-size 14px
	color #444	
.mainbody .con_wrap .text li .txt p
	width 612px 
	line-height 30px
			
//分页样式
.mainbody .con_wrap .pages 
	width 245px 
	margin 30px auto 0
.mainbody .con_wrap .pages li 
	float left
	margin-right 9px
.mainbody .con_wrap .pages li a
	font-size 14px 
	padding 5px 9px 
	border 1px solid #222
.mainbody .con_wrap .pages li a.cur 
	background #73d4e7















